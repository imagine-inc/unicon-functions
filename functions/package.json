    "logs": "firebase functions:log"
  },
  "main": "./index.js",
  "dependencies": {
    "events": "^3.0.0",
    "firebase-admin": "~5.12.1",
    "firebase-functions": "^1.0.3",
    "node-mocks-http": "^1.7.0"
  },
  "devDependencies": {
    "eslint": "^4.12.0",
    "eslint-plugin-promise": "^3.6.0",
    "mocha": "^5.2.0"
  },
  "private": true
}
